{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "carkeek-blocks/link-tile",
  "version": "0.1.0",
  "title": "Link Tile",
  "category": "widgets",
  "icon": "admin-links",
  "parent": [
    "carkeek-blocks/link-tiles"
  ],
  "description": "Block that displays a link with an image background and hover state.",
  "supports": {
    "html": false,
    "color": {
      "background": true,
      "text": true
    }
  },
  "textdomain": "carkeek-site-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "linkText": {
      "type": "string"
    },
    "imageId": {
      "type": "number"
    },
    "imageUrl": {
      "type": "string"
    },
    "linkHoverText": {
      "type": "string"
    },
    "linkUrl": {
      "type": "string"
    },
    "opensInNewTab": {
      "type": "boolean",
      "default": false
    },
    "focalPoint": {
      "type": "object"
    }
  }
}