{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [

				{
					"color": "#6E7B23",
					"name": "Green",
					"slug": "primary"
				},
				{
					"color": "#264D53",
					"name": "Teal",
					"slug": "secondary"
				},
				{
					"color": "#D3691E",
					"name": "Orange",
					"slug": "accent"
				},
				{
					"color": "#FAF8F1",
					"name": "Beige Light",
					"slug": "tint-lt"
				},
				{
					"color": "#7D7D7D",
					"name": "grey",
					"slug": "grey"
				},
				{
					"color": "#495119",
					"name": "Green Dark",
					"slug": "tint-dark"
				},
				{
					"color": "#FFFFFF",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Black",
					"slug": "contrast"
				}
			]
		},
		"layout": {
			"contentSize": "var(--content-width)",
			"wideSize": "var(--content-width-wide)"
		},
		"spacing": {
			"defaultSpacingSizes": false,
			"spacingSizes": [
				{
					"name": "Tiny",
					"size": "10px",
					"slug": "20"
				},
				{
					"name": "X-Small",
					"size": "20px",
					"slug": "30"
				},
				{
					"name": "Small",
					"size": "clamp(30px, 5vw, 35px)",
					"slug": "40"
				},
				{
					"name": "Regular",
					"size": "clamp(30px, 5vw, 50px)",
					"slug": "50"
				},
				{
					"name": "Large",
					"size": "clamp(40px, 7vw, 60px)",
					"slug": "60"
				},
				{
					"name": "X-Large",
					"size": "clamp(40px, 7vw, 80px)",
					"slug": "70"
				},
				{
					"name": "XX-Large",
					"size": "clamp(70px, 10vw, 100px)",
					"slug": "80"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"writingMode": true,
			"defaultFontSizes": false,
			"fluid": true,
			"fontSizes": [

				{
					"fluid": {
						"max": "1.0625rem",
						"min": "1rem"
					},
					"name": "Extra Small",
					"size": "1.0625rem",
					"slug": "x-small"
				},
				{
					"fluid": {
						"max": "1.125rem",
						"min": "1.125rem"
					},
					"name": "Small",
					"size": "1.125rem",
					"slug": "small"
				},
				{
					"fluid": {
						"max": "1.25rem",
						"min": "1.25rem"
					},
					"name": "Base",
					"size": "1.25rem",
					"slug": "base"
				},
				{
					"fluid": {
						"max": "1.625rem",
						"min": "1.5rem"
					},
					"name": "Large",
					"size": "1.625rem",
					"slug": "large"
				},
				{
					"fluid": {
						"max": "1.75rem",
						"min": "1.625rem"
					},
					"name": "Extra Large",
					"size": "1.75rem",
					"slug": "x-large"
				}
			],
			"fontFamilies": [
				{
					"name": "Lexia",
					"slug": "headings",
					"fontFamily": "'lexia', serif"
				},
				{
					"name": "Neulis Sans",
					"slug": "headings-sans",
					"fontFamily": "'neulis-sans', sans-serif"
				},
				{
					"name": "Articulat CF",
					"slug": "global",
					"fontFamily": "'articulat-cf', sans-serif"
				}
			]
		},
		"blocks":{
			"core/heading": {
				"typography": {
					"fontSizes": [
						{
						"slug": "h1",
						"size": "var(--font-size-h1)",
						"name": "H1"
						},
						{
						"slug": "h2",
						"size": "var(--font-size-h2)",
						"name": "H2"
						},
						{
						"slug": "h3",
						"size": "var(--font-size-h3)",
						"name": "H3"
						},
						{
						"slug": "h4",
						"size": "var(--font-size-h4)",
						"name": "H4"
						},
						{
						"slug": "h5",
						"size": "var(--font-size-h5)",
						"name": "H5"
						},
						{
						"slug": "h6",
						"size": "var(--font-size-h6)",
						"name": "H6"
						}
					]
        		}
      		}
		}
	},
	"styles": {
		"color": {
			"background": "var:preset|color|base",
			"text": "var:preset|color|contrast"
		},
		"spacing": {
			"blockGap": "var:preset|spacing|40"
		},
		"typography": {
			"fontFamily": "var:preset|font-family|global",
			"fontSize": "var:preset|font-size|base",
			"fontWeight": "500",
			"letterSpacing": "0",
			"lineHeight": "1.64"
		},
		"blocks": {
			"core/avatar": {
				"border": {
					"radius": "100px"
				}
			},
			"core/button": {
				"variations": {
					"outline": {
						"border": {
							"color": "currentColor",
							"width": "4px"
						}
					}
				}
			},
			"core/columns": {
				"spacing": {
					"blockGap": "var:preset|spacing|50"
				}
			},
			"core/column": {
				"spacing": {
					"blockGap": "var:preset|spacing|30"
				}
			},
			"core/buttons": {
				"spacing": {
					"blockGap": "16px"
				}
			},
			"core/code": {
				"typography": {
					"fontFamily": "var:preset|font-family|fira-code",
					"fontSize": "var:preset|font-size|base",
					"fontWeight": "300"
				},
				"color": {
					"background": "var:preset|color|accent-5",
					"text": "var:preset|color|contrast"
				},
				"spacing": {
					"padding": {
						"right": "var:preset|spacing|40",
						"bottom": "var:preset|spacing|40",
						"left": "var:preset|spacing|40",
						"top": "var:preset|spacing|40"
					}
				}
			},

			"core/post-date": {
				"color":{
					"text": "var:preset|color|accent-4"
				},
				"elements": {
					"link": {
						"color" : {
							"text": "var:preset|color|accent-4"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|small"
				}
			},
			"core/post-navigation-link": {
				"typography": {
					"fontSize": "var:preset|font-size|base"
				}
			},
			"core/post-terms": {
				"css": "& a { white-space: nowrap; }",
				"typography": {
					"fontSize": "var:preset|font-size|small",
					"fontWeight": "600"
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/group": {
				"spacing": {
					"blockGap": "var:preset|spacing|40"
				}
			},
			"core/pullquote": {
				"typography": {
					"fontSize": "var:preset|font-size|x-large",
					"lineHeight": "1.6",
					"textAlign": "left"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var:preset|font-size|small",
							"fontStyle": "normal",
							"textTransform": "none"
						}
					}
				},
				"spacing": {
					"padding": {
						"bottom": "var:preset|spacing|30",
						"top": "var:preset|spacing|30"
					}
				},
				"css": "& p:last-of-type {margin-bottom: var(--wp--preset--spacing--30);}"
			},
			"core/query-pagination": {
				"typography": {
					"fontSize": "var:preset|font-size|base",
					"fontWeight": "500"
				}
			},

			"core/separator": {
				"border": {
					"color": "currentColor",
					"style": "solid",
					"width": "0 0 1px 0"
				},
				"variations": {
					"wide": {
						"css": " &:not(.alignfull){max-width: var(--wp--style--global--wide-size) !important;}"
					}
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "var:preset|font-size|base"
				}
			},
			"core/site-title": {
				"typography": {
					"fontWeight": "700",
					"letterSpacing": "-.5px"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/term-description": {
				"typography": {
					"fontSize": "var:preset|font-size|base"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var:preset|font-size|base"
				},
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			}
		},
		"elements": {
			"button": {
				"color": {
					"background": "transparent",
					"text": "var:preset|color|primary"
				},
				"border": {
					"radius": "0",
					"color": "currentColor",
					"width": "2px",
					"style": "solid"
				},

				"spacing": {
					"padding": {
						"bottom": "0.75rem",
						"left": "1.875rem",
						"right": "1.875rem",
						"top": "0.75rem"
					}
				},
				"typography": {
					"fontFamily": "var:preset|font-family|headings-sans",
					"textTransform": "uppercase",
					"fontSize": "var:preset|font-size|base",
					"fontWeight": "800"
				},
				":hover":{
					"color": {
						"text": "var:preset|color|base",
						"background": "var:preset|color|primary"
					},
					"border": {
						"color": "var:preset|color|primary"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"caption": {
				"typography": {
					"fontSize": "var:preset|font-size|small",
					"lineHeight": "1.4"
				}
			},

			"link": {
				"color": {
					"text": "var:preset|color|accent"
				},
				"typography": {
					"textDecoration": "none",
					"fontWeight": "700"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "header",
			"name": "vertical-header",
			"title": "Vertical Header"
		},
		{
			"area": "header",
			"name": "header-large-title",
			"title": "Header with large title"

		},
		{
			"area": "footer",
			"name": "site-footer",
			"title": "Site Footer"
		},
		{
			"area": "footer",
			"name": "service-footer",
			"title": "Services Footer"
		},
		{
			"area": "footer",
			"name": "projects-footer",
			"title": "Projects Footer"
		}

	],
	"customTemplates": [
		{
			"name": "page-no-title",
			"postTypes": ["page"],
			"title": "Page No Title"
		}
	]
}
